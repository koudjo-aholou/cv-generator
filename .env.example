# Flask Configuration
# Set to 'true' only for development, never in production
FLASK_DEBUG=False

# Host configuration
# Use 127.0.0.1 for localhost only (secure)
# Use 0.0.0.0 to bind to all interfaces (less secure, only if needed)
FLASK_HOST=127.0.0.1

# Port configuration
FLASK_PORT=5000

# SMTP Configuration for Email Sending
# SMTP server hostname (e.g., smtp.gmail.com, smtp.office365.com)
SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (usually your email address)
SMTP_USER=your-email@example.com

# SMTP password or app-specific password
# For Gmail: Generate an app-specific password at https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-password

# Sender email address (optional, defaults to SMTP_USER)
SENDER_EMAIL=your-email@example.com
