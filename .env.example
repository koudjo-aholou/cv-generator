# Flask Configuration
# Set to 'true' only for development, never in production
FLASK_DEBUG=False

# Host configuration
# Use 127.0.0.1 for localhost only (secure)
# Use 0.0.0.0 to bind to all interfaces (less secure, only if needed)
FLASK_HOST=127.0.0.1

# Port configuration
FLASK_PORT=5000

# Flask Secret Key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here

# LinkedIn API Configuration
# Get your credentials at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:5000/api/linkedin/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:8080
